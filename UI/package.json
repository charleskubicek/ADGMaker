{
  "name": "adgmaker-ui",
  "version": "1.0.0",
  "description": "Electron UI for ADGMaker - Create Ableton Live Selector Racks from sample packs",
  "main": "dist/main/main/main.js",
  "scripts": {
    "build": "webpack --config webpack.config.js",
    "build:main": "tsc -p tsconfig.main.json",
    "build:all": "npm run build && npm run build:main",
    "start": "npm run build:all && electron .",
    "dev": "NODE_ENV=development npm run start",
    "package": "electron-builder",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "ableton",
    "live",
    "drum-rack",
    "adg",
    "sample-pack",
    "selector"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.0",
    "@types/nunjucks": "^3.2.6",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "jest": "^29.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.adgmaker.ui",
    "productName": "ADGMaker",
    "directories": {
      "output": "out"
    },
    "files": [
      "dist/**/*"
    ],
    "extraResources": [
      {
        "from": "src/templates",
        "to": "src/templates"
      }
    ],
    "mac": {
      "category": "public.app-category.music"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
